<div class="home-brands">
  <div class="home-brands__title">
    <h2>{{ section.settings.section_title }}</h2>
  </div>
  <div  class="home-brands__grid">
    {% for block in section.blocks %}
      <a class="mobile" href="{{  block.settings.brand__link }}">
        <img src="{{ block.settings.brand__image--mobile | img_url: 'master' }}" />
      </a>
      <a class="desktop" href="{{  block.settings.brand__link }}">
        <img src="{{ block.settings.brand__image--desktop | img_url: 'master' }}" />
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Home brands",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section__title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand__image--desktop",
          "label": "Desktop"
        },
        {
          "type": "image_picker",
          "id": "brand__image--mobile",
          "label": "Mobile"
        },
        {
          "type": "url",
          "id": "brand__link",
          "label": "ver mas link"
        }
      ]
    }
  ]
}
{% endschema %}